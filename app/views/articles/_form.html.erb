<% if @article.errors.any? %>
  <h2> The following errors prevented the article form being saved:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :title%>
    </div>
  </div>
    <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :description, rows: 10, sclass: "form-control"%>
      </div>
    </div>

    <div class="form-group row">
      <%= f.submit class: "btn btn-outline-dark btn-lg" %>
    </div>

    <%= link_to 'Return to articles listing', articles_path %></p>
  <% end %>
<div id="page-content">
  <h2 class="text-center mt-4"><%= @article.title%></h2>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow p-2 mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= @article.user.username if @article.user%>
            <%= link_to gravatar_for(@article.user), user_path(@article.user)%> 
            <% if @article.category.any? %>
              <div class="mt-2"><%= render @article.category %></div>
            <% end %>
          </div>
          <div class="card-body">
            <div class="card-text text-start"><%= simple_format(@article.description) %></div>
            <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
              <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
              <%= link_to 'Delete', article_path(@article), class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?'} %>
            <% end %>  
          </div>
          <div class="card-footer text-muted">
            <small>Created about <%= time_ago_in_words(@article.created_at) %> ago,
            edited about <%= time_ago_in_words(@article.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>